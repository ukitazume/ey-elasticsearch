<h1>Listing articles</h1>

<table>
  <thead>
    <tr>
      <th colspan="4"></th>
    </tr>
  </thead>
  <form action="/" class="input-append">
    <input class="span2" id="appendedInputButton" type="text" name="q">
    <input class="btn" type="submit" formaction="" value="search">
    <a href="/articles">clear</a>
  </div>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.body %></td>
        <td><%= link_to 'Show', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

